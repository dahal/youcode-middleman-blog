<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>YouCode.io Blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= stylesheet_link_tag "bootstrap", "custom.css", "font-awesome.css", "solarized.css", "syntax.css" %>
    <%= javascript_include_tag  "prettify/prettify", "bootstrap", "custom"%>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>
    <%= partial "/partials/navbar" %>
    <div class = "container-fluid" style="background:#ECF0F1">
    
    <div id="wrap" class="container">
        <% if current_article.nil? %>
          <div class="container">
            <%= yield %>
          </div>

        <% else %>
          <div class="col-md-8 col-md-offset-2">
            <center>
              <h2><%= current_article.title unless current_article.nil? %></h2>
              <span><i class="fa fa-calendar">  <%= current_article.date.strftime('%b %e %Y') %></i></span>
            </center>
            <hr>
            <%= yield %>
            <br/>
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <hr>
                <center>
                  <%# image_tag "mypic.jpg", :size => "75x75", :alt => "Arthur", :class=> "img-circle" %>
                  <img src="images/mypic.jpg" height="75" width="75" class="img-circle">
                  <br/>
                  <span>Writter By </span><br/>
                  <a class="text-info tx-md" href="#"><i class="fa fa-twitter">@youcodeio</i></a><br/>
                  <p>Puru D. is a Ruby on Rails Developer from Houston, TX.</p>
                </center> 
                
                <hr>
              </div>
            </div>
              
            
            <div class="row">
            <!--Disqus Comment-->
             <div id="disqus_thread"></div>
              <script type="text/javascript">
                  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                  var disqus_shortname = 'youcodeioblog'; // required: replace example with your forum shortname

                  /* * * DON'T EDIT BELOW THIS LINE * * */
                  (function() {
                      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                  })();
              </script>
              <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
              <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
              
            <!--/Disqus comment-->
            </div>
          </div>
        <% end %>

    </div>
  </div>

    <%= partial "/partials/footer" %>

    <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'youcodeioblog'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
    </script>
    
    
   
  </body>
</html>
